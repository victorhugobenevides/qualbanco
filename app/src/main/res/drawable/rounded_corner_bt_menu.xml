<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/azul"
                android:endColor = "@color/azul"
                android:angle = "180" />
            <corners
                android:radius="4dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" >
            </padding>
        </shape>
    </item>



    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimaryDark"
                android:endColor = "@color/colorPrimaryDark"
                android:angle = "180" />
            <corners
                android:radius="4dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" >
            </padding>
        </shape>
    </item>
</selector> 